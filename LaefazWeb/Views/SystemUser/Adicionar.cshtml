@{
    ViewBag.Title = "Adicionar";
}
@model OlindaSharksWeb.Models.SystemUser
@section styles {
    @Styles.Render("~/Asset/Vendor/jquery-upload-file/css")

    <style type="text/css">
        .form-control[readonly] {
            background-color: white;
        }

        .progress {
            position: relative;
        }

            .progress span {
                position: absolute;
                display: block;
                width: 100%;
                color: black;
            }
    </style>
}

@using (Html.BeginForm("Salvar", "SystemUser", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="hidden" name="MAX_FILE_SIZE" value="314572800" />
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Adicionar Usuário</h3>
        </div>
        <div class="box-body">
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-4 form-group">
                        @Html.Label("name", "Nome")
                        @Html.TextBox("name", null, new { @class = "form-control", required = "required" })
                    </div>

                    <div class="col-xs-4 form-group">
                        @Html.Label("password", "Senha")
                        @Html.TextBox("password", null, new { @class = "form-control", required = "required" })
                    </div>

                    <div class="col-xs-4 form-group">
                        @Html.Label("login", "login")
                        @Html.TextBox("login", null, new { @class = "form-control", required = "required" })
                    </div>
                </div>
            </div>
        </div>
        <div class="box-footer" align="right">
            <a href="@Url.Action("Index", "SystemUser")" class="btn btn-danger" id="cancelar">Cancelar</a>
            <button type="submit" class="btn btn-primary" id="submit-form">Salvar</button>
        </div>
        <!-- /.box-body -->
    </div>
}
<!-- /.box -->
@section scripts
{
    @Styles.Render("~/Asset/Vendor/jquery-upload-file/js")

    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>
}
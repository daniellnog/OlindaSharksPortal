@{
    ViewBag.Title = "Adicionar";
}
@model OlindaSharksWeb.Models.Player
@section styles {
    @Styles.Render("~/Asset/Vendor/jquery-upload-file/css")

    <style type="text/css">
        .form-control[readonly] {
            background-color: white;
        }

        .progress {
            position: relative;
        }

            .progress span {
                position: absolute;
                display: block;
                width: 100%;
                color: black;
            }
    </style>
}

@using (Html.BeginForm("Salvar", "Player", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="hidden" name="MAX_FILE_SIZE" value="314572800" />
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Adicionar Jogador</h3>
        </div>
        <div class="box-body">
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-4 form-group">
                        @Html.Label("name", "Nome")
                        @Html.TextBox("name", null, new { @class = "form-control", required = "required" })
                    </div>

                    <div class="col-xs-4 form-group">
                        @Html.Label("nickname", "Apelido")
                        @Html.TextBox("nickname", null, new { @class = "form-control", required = "required" })
                    </div>

                    <div class="col-xs-4 form-group">
                        @Html.Label("cpf", "Cpf")
                        @Html.TextBox("cpf", null, new { @class = "form-control", required = "required" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-4 form-group">
                        @Html.Label("rg", "RG")
                        @Html.TextBox("rg", null, new { @class = "form-control", required = "required" })
                    </div>

                    <div class="col-xs-4 form-group">
                        @Html.Label("DateOfBorn", "Data de Nascimento")
                        @Html.TextBox("DateOfBorn", null, new { @class = "form-control", required = "required" })
                    </div>

                    <div class="col-xs-4 form-group">
                        @Html.Label("address", "Endereço")
                        @Html.TextBox("address", null, new { @class = "form-control", required = "required" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-4 form-group">
                        @Html.Label("telephone", "Telefone")
                        @Html.TextBox("telephone", null, new { @class = "form-control", required = "required" })
                    </div>

                    <div class="col-xs-4 form-group">
                        @Html.Label("profileFacebook", "Perfil do facebook")
                        @Html.TextBox("profileFacebook", null, new { @class = "form-control"})
                    </div>

                    <div class="col-xs-4 form-group">
                        @Html.Label("profileInstagram", "Perfil do Instagram")
                        @Html.TextBox("profileInstagram", null, new { @class = "form-control"})
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-4 form-group">
                        @Html.Label("height", "Altura")
                        @Html.TextBox("height", null, new { @class = "form-control", required = "required" })
                    </div>

                    <div class="col-xs-4 form-group">
                        @Html.Label("weight", "Peso")
                        @Html.TextBox("weight", null, new { @class = "form-control", required = "required" })
                    </div>

                    <div class="col-xs-4 form-group">
                        @Html.Label("team", "Time")
                        @Html.HiddenFor(m => m.IdTeamFK, new { Id = "idTeamFK" })
                        @Html.DropDownList("times", new SelectList(ViewBag.ListTeam, "IdTeam", "Description"), "", new
                           {
                               @class = "form-control",
                               @id = "listTeam",
                               @style = "width: 100%; padding-right: 12px; padding-left: 12px; border-right-width: 1px;",
                           }
                        )

                    </div>
                </div>
            </div>
        </div>
        <div class="box-footer" align="right">
            <a href="@Url.Action("Index", "Player")" class="btn btn-danger" id="cancelar">Cancelar</a>
            <button type="submit" class="btn btn-primary" id="submit-form">Salvar</button>
        </div>
        <!-- /.box-body -->
    </div>
}
<!-- /.box -->
@section scripts
{
    @Styles.Render("~/Asset/Vendor/jquery-upload-file/js")

    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>
}
@using TDMWeb.Extensions
@{
    ViewBag.Titulo = "Pedidos";
}

@section styles {
    @Styles.Render("~/Asset/Vendor/jquery-upload-file/css")

    <style type="text/css">
        .form-control[readonly] {
            background-color: white;
        }

        .progress {
            position: relative;
        }

            .progress span {
                position: absolute;
                display: block;
                width: 100%;
                color: black;
            }
    </style>
}

@using (Html.BeginForm("Salvar", "Pedido", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="hidden" name="MAX_FILE_SIZE" value="314572800" />
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Adicionar Ambiente</h3>
        </div>
        <div class="box-body">
            <div class="form-group">

                <div class="row">
                    <div class="col-md-12">
                        @Html.Label("nomeLab", "Nome")
                        @Html.TextBox("nomeBox", null, new { @class = "form-control", required = "required" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">

                        @Html.Label("clienteLab", "Cliente")
                        @Html.DropDownList("ambientesList", new SelectList(ViewBag.clientes, "IdCliente", "Nome"), null, new
                   {
                       @class = "form-control",
                       @id = "list-clientes",
                       @style = "width: 100%; padding-right: 12px; padding-left: 12px; border-right-width: 1px;",
                       @required = "required"
                   }
               )

                    </div>

                    <div class="col-md-6">
                        @Html.Label("tipoPagamentoLab", "Tipo de Pagamento")
                        @Html.DropDownList("tipoPagamentoList", new SelectList(ViewBag.tipoPagamento, "Id", "Descricao"), null, new
                   {
                       @class = "form-control",
                       @id = "list-tipo-pagamento",
                       @style = "width: 100%; padding-right: 12px; padding-left: 12px; border-right-width: 1px;",
                       @required = "required"
                   }
               )
                    </div>
                </div>
                @Html.Label("DataPedido", "Data do Pedido")
                @Html.TextBox("DataPedido", null, new { @class = "form-control", required = "required" })

            </div>

                </div>
                <div class="box-footer" align="right">
                    <a href="@Url.Action("Index", "Pedido")" class="btn btn-danger" id="cancelar">Cancelar</a>
                    <button type="submit" class="btn btn-primary" id="submit-form">Salvar</button>
                </div>
                <!-- /.box-body -->
            </div>
}
<!-- /.box -->
@section scripts
{
    @Styles.Render("~/Asset/Vendor/jquery-upload-file/js")

    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>
}